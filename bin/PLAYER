#!/bin/sh

read mw mh << EOF
$(xdpyinfo | awk '/dimensions/ {
	sub("x", " ", $2)
	print $2
}')
EOF

all=
[ "X$1" = X-a ] && {
	all=Yes
	shift
}

xdotool getactivewindow windowsize $((2 * mw / 3)) 30 windowmove $((mw / 6)) -3

# wait for the resize
sleep .1
COLS=$(tput cols)

if [ -z "$all" ]
then
	c=$(printf '\1')
	readlns() {
		while read -r l
		do
			l=${l#$c}
			l=${l%%$c*}
			printf "\n%${COLS}s " "$l"
		done
	}
else
	readlns() {
		while read -r l
		do
			printf "\n%${COLS}s " "$l"
		done
	}
fi

xwrtnm | readlns
