#!/bin/sh

xdotool getactivewindow windowsize 1260 31 windowmove 255 -3

All=
[ "X$1" = X-a ] && {
	All=Yes
	shift
}

Fifo=${1:-${TMPDIR-/tmp}/sblocks.$DISPLAY.fifo}

sleep .01
COLS=$(tput cols)

kill -USR1 $(pidof sblocks)
sleep .1

while read l
do
	if [ -z "$All" ]
	then
		l=${l% us *}
		l=${l% el *}
	fi
	printf "\n%${COLS}s" "$l "
done < "$Fifo"
