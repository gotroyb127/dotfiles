#!/bin/sh

Print() {
	S=$(Player.sh playlist-info) || {
		r=$?
		printf '%s' "[$r] "
		return $r
	}
	LF_Clear
	printf "%s" "$S"
}
Read() {
	printf '%s' 'Waiting... : '
	read ans
	case $ans in
	(q*)
		exit 0
	;;
	(c*)
		clear
	;;
	(r*)
		exec "$0" "$@"
	;;
	esac
}
Main() {
	while true
	do
		Print || Read
		sleep .93
	done
}

trap 'echo; Read; Main' INT

Main
