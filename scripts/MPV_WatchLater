#!/bin/sh

IFS='
'

Print() {
	LF_Clear
	for f in $(find ~/.config/mpv/watch_later -type f)
	do
		(	read i; i=${i#??}
			if [ -e "$i" ]
			then
				echo "${i##*/}"
			else
				echo "$i"
			fi
		) < "$f"
	done | sort -nk2 |
	while read n
	do
		echo "$n"
	done
}

Print
while read ans
do
	Print | sponge
	case $ans in
	(q*)
		break
	;;
	(r*)
		exec "$0" "$@"
	;;
	esac
done
