set adjust-open width
set scroll-step 25
set zoom-step 5
set first-page-column 0:0:0:0
set continuous-hist-save

# set scroll-full-overlap 0.0001
# set selection-clipboard clipboard

#set recolor-reverse-video

## Recoloring Options

set recolor
set recolor-keephue
set recolor-lightcolor "#010101"
set recolor-darkcolor "#ffffff"

set guioptions vh
set statusbar-home-tilde
set window-title-home-tilde
set window-title-basename
set window-title-page false

set font "DejaVu Sans Semi-Condensed 10"

map <Esc> abort

map u scroll half-up
map d scroll half-down
map U scroll up
map D scroll down
map k     feedkeys 4<Up>
map j     feedkeys 4<Down>
map h     feedkeys 4<Left>
map l     feedkeys 4<Right>
map <C-y> feedkeys <C-Up>
map <C-e> feedkeys <C-Down>

map b scroll full-up
map f scroll full-down

#map k     feedkeys <C-Up>
#map j     feedkeys <C-Down>

map e toggle_page_mode

map <C-PageUp> scroll half-up
map <C-PageDown> scroll half-down
