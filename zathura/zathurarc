set font "DejaVu Sans 8"

map <Esc> abort

map u scroll half-up
map d scroll half-down
map U     feedkeys <C-Up>
map D     feedkeys <C-Down>
map <C-y> feedkeys <C-Up>
map <C-e> feedkeys <C-Down>

map b scroll full-up
map f scroll full-down
#map b feedkeys <PageUp>
#map f feedkeys <PageDown>

map e toggle_page_mode

map <C-PageUp> scroll half-up
map <C-PageDown> scroll half-down

#map l feedkeys <C-r>
#map <C-Up> feedkeys <C-Up>

